@model IEnumerable<Articulo>
@{
    ViewData["Title"] = "Articulos";
}

<div class="row">   
    <div class="col-4">
        <h3>Lista de artículos</h3>
    </div>
    <div class="col-3">
        <a asp-action="Crear" class="btn btn-primary form-control">
            Crear artículo
        </a>  
    </div>

</div>

<section class="lista-articulos">
    @if (Model.Count() > 0)
    {
        <table class="table table-striped border">
            <tr>
                <th> @Html.DisplayNameFor(art => art.Articulo_Id) </th>
                <th> @Html.DisplayNameFor(art => art.TituloArticulo) </th>
                <th> @Html.DisplayNameFor(art => art.Descripcion) </th>
                <th> @Html.DisplayNameFor(art => art.Fecha) </th>
                <th> @Html.DisplayNameFor(art => art.Calificacion) </th>
                <th> @Html.DisplayNameFor(art => art.Categoria.Nombre) </th>
                <th> Acción </th>
            </tr>

            @foreach(var articulo in Model)
            {
                <tr>
                    <td>@articulo.Articulo_Id</td>
                    <td>@articulo.TituloArticulo</td>
                    <td>@articulo.Descripcion</td>
                    <td>@articulo.Fecha</td>
                    <td>@articulo.Calificacion</td>
                    <td>@articulo.Categoria.Nombre</td>
                    <td>
                        <a asp-action="Editar" asp-route-Id="@articulo.Articulo_Id" class="btn btn-primary">Editar</a>
                        <a asp-action="AdministrarEtiquetas" asp-route-Id="@articulo.Articulo_Id" class="btn btn-success">Administrar etiquetas</a>
                        <a asp-action="Borrar" asp-route-Id="@articulo.Articulo_Id" class="btn btn-danger">Borrar</a>
                    </td>
                </tr>
            }

        </table>
    }
    else
    {
        <p>
            No hay artículos
        </p>
    }
</section>