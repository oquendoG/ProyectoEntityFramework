@model IEnumerable<Categoria>
@{
    ViewData["Title"] = "Categorias";
}

<div class="row">   
    <div class="col-4">
        <h3>Lista de categorias</h3>
    </div>
    <div class="col-3">
        <a asp-action="Crear" class="btn btn-primary form-control">
            Crear categoría
        </a>  
    </div>

    <div class="col-3">   
        <a asp-action="VistaCrearMultiplesCategorias" class="btn btn-secondary form-control">
            Crear multiples categorías
        </a>
        <br />
        <br />

    </div>

</div>

<section class="lista-categorias">
    @if (Model.Count() > 0)
    {
        <table class="table table-striped border">
            <tr>
                <th> Nombre categoría </th>
                <th> Fecha de creación </th>
                <th> Acción </th>
            </tr>

            @foreach(var categoria in Model)
            {
                <tr>
                    <td>@categoria.Nombre</td>
                    <td>@categoria.FechaCreacion</td>
                    <td>
                        <a asp-action="Editar" asp-route-Id="@categoria.Categoria_Id" class="btn btn-primary">Editar</a>
                        <a asp-action="Borrar" asp-route-Id="@categoria.Categoria_Id" class="btn btn-danger">Borrar</a>
                    </td>
                </tr>
            }

        </table>
    }
    else
    {
        <p>
            No hay categorías
        </p>
    }
</section>