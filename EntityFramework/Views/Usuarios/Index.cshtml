@model IEnumerable<Usuario>
@{
    ViewData["Title"] = "Usuarios";
}

<div class="row">   
    <div class="col-4">
        <h3>Lista de usuarios</h3>
    </div>
    <div class="col-3">
        <a asp-action="Crear" class="btn btn-primary form-control">
            Crear usuario
        </a>  
    </div>

</div>

<section class="lista-usuarios">
    @if (Model.Count() > 0)
    {
        <table class="table table-striped border">
            <tr>
                <th> @Html.DisplayNameFor(user => user.Id)</th>
                <th> @Html.DisplayNameFor(user => user.NombreUsuario)</th>
                <th> @Html.DisplayNameFor(user => user.Email)</th>
                <th> @Html.DisplayNameFor(user => user.Direccion)</th> 
                <th> Acción </th>
            </tr>

            @foreach(var usuario in Model)
            {
                <tr>
                    <td>@usuario.Id</td>
                    <td>@usuario.NombreUsuario</td>
                    <td>@usuario.Email</td>
                    <td>@usuario.Direccion</td>
                    <td>
                        <a asp-action="Editar" asp-route-Id="@usuario.Id" class="btn btn-primary">Editar</a>
                        <a asp-action="Detalle" asp-route-Id="@usuario.Id" class="btn btn-secondary">Detalle</a>
                        <a asp-action="Borrar" asp-route-Id="@usuario.Id" class="btn btn-danger">Borrar</a>
                    </td>
                </tr>
            }

        </table>
    }
    else
    {
        <p>
            No hay usuarios
        </p>
    }
</section>